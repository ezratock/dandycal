{
	"manifest_version": 3,
	"name": "Screenshot to Calendar",
	"version": "1.0",
	"description": "Capture screenshots to create calendar events",
	"permissions": [
		"activeTab",
		"tabs",
		"scripting",
		"storage",
        "downloads"
	],
	"host_permissions": [
		"<all_urls>",
		"https://generativelanguage.googleapis.com/*"
	],
	"background": {
		"service_worker": "./src/extension/background.js",
		"type": "module"
	},
	"action": {
		"default_popup": "src/extension/popup.html",
		"default_icon": {
			"16": "src/extension/assets/icon.png",
			"32": "src/extension/assets/icon.png",
			"48": "src/extension/assets/icon.png",
			"128": "src/extension/assets/icon.png"
		}
	},
	"options_page": "src/extension/options.html",
	"commands": {
		"capture-screenshot": {
			"suggested_key": {
				"default": "Ctrl+Shift+S",
				"mac": "Command+Shift+S"
			},
			"description": "Take screenshot"
		}
	},
	"icons": {
		"16": "src/extension/assets/icon.png",
		"32": "src/extension/assets/icon.png",
		"48": "src/extension/assets/icon.png",
		"128": "src/extension/assets/icon.png"
	},
	"web_accessible_resources": [
		{
			"resources": ["src/extension/assets/camera-13695.mp3"],
			"matches": ["<all_urls>"]
		}
	]
}
